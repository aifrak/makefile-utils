{
  // Editor:
  "editor.rulers": [80],
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  // Files:
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Override languages:
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Spelling:
  "cSpell.enableFiletypes": [
    "plaintext",
    "dockerfile",
    "git-commit",
    "git-rebase",
    "json",
    "jsonc",
    "makefile",
    "markdown",
    "text",
    "yaml",
    "yml"
  ],
  "cSpell.userWords": ["Shellcheck", "Shellspec"],
  "cSpell.words": ["deps", "koalaman", "markdownlint", "nosborn"],

  // Markdownlint:
  "markdownlint.config": {
    "MD013": true
  },

  // Comment Divider:
  "comment-divider.length": 50
}
