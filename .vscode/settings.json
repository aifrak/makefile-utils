{
  // Spelling:
  "cSpell.userWords": [
    "Shellcheck",
    "Shellspec",
  ],
  "cSpell.words": [
    "markdownlint",
    "nosborn"
  ],

  // Markdownlint:
  "markdownlint.config": {
    "MD013": true
  },

  // Comment bars:
  "commentbars.quickPresets": [
    {
      "label": "Section title",
      "fillChar": "-",
      "width": 50,
      "thickness": 3,
      "seamlessFill": false
    },
  ]
}
